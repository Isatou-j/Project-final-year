{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*",
    "coverage/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    ".history",
    "coverage"
  ],
  "exec": "tsx src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "*"
  },
  "restartable": "rs",
  "colours": true,
  "verbose": true,
  "delay": 2000
}
